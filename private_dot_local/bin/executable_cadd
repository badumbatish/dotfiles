# INFO: cadd STANDS FOR CHEZMOI ADDING ALL RELATED FILE
#
# Add zsh gitconfig
chezmoi add ~/.zshrc ~/.gitconfig

# INFO: Neovim config
rm -rf ~/.local/share/chezmoi/dot_config/nvim/
chezmoi add ~/.config/nvim

# Add kitty
chezmoi add ~/.config/kitty/current-theme.conf ~/.config/kitty/dark-theme.auto.conf ~/.config/kitty/light-theme.auto.conf ~/.config/kitty/kitty.conf

# Add executable
chezmoi add ~/.local/bin/cadd ~/.local/bin/sesh  ~/.local/bin/cinstall ~/.local/bin/cpush


pushd . > /dev/null

cd ~/.local/share/chezmoi/
git add .
git status
git commit -m "Automatic update via ~/.local/bin/cadd"

popd > /dev/null

