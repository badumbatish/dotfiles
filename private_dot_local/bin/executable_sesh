#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=$(
        (
            find ~/Developer/github ~/Developer/igalia ~/projects  -mindepth 1 -maxdepth 1 -type d
            find ~/Developer/nvim_proj ~/projects -mindepth 1 -maxdepth 1 -type d
            find ~/.config/nvim -maxdepth 0 -type d
        ) | fzf
    )
fi

if [[ -z $selected ]]; then
    exit 0
fi

selected_name=$(basename "$selected" | tr . _)
tmux_running=$(pgrep tmux)

# Start tmux if it is not running
if [[ -z $tmux_running ]]; then
    tmux new-session -d
    tmux_running=$(pgrep tmux)
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
    tmux new-session -d -s $selected_name -c $selected
    tmux split-window -h -c $selected -l 33% -t $selected_name
    tmux split-window -v -c $selected -t $selected_name
    tmux select-pane -t $selected_name:0.0
    tmux send-keys -t $selected_name:0.0 'neofetch' C-m
    tmux send-keys -t $selected_name:0.1 'git status' C-m  
    tmux send-keys -t $selected_name:0.2 'ls' C-m
fi


# Check if we have active clients when inside tmux
if [[ -z $TMUX ]] || [[ -z "$(tmux list-clients)" ]]; then
    tmux attach-session -t $selected_name
else
    tmux switch-client -t $selected_name
fi
